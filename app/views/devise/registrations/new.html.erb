        <div class="bg-grey-lighter min-h-screen flex flex-col">
            <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
                <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
                    <h1 class="mb-8 text-3xl text-center text-indigo-600">Sign up</h1>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>

                      <div>
                        <%= f.label :email, class: "text-center text-md text-indigo-500 mt-4" %><br />
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com", class: "block border border-grey-light w-full p-3 rounded mb-4"%>
                      </div>

                      <div>
                        <%= f.label :password, class: "text-center text-md text-indigo-500 mt-4"%>
                        <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4"%>
                      </div>

                      <div>
                        <%= f.label :password_confirmation, class: "text-center text-md text-indigo-500 mt-4"%><br />
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block border border-grey-light w-full p-3 rounded mb-4" %>
                      </div>

                      <div>
                        <%= f.submit "Sign up", class: "mx-auto md:mx-0 hover:underline bg-white text-gray-800 font-bold rounded-full my-6 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out" %>
                      </div>
                    <% end %>
                    <div class="text-center text-sm text-grey-dark mt-4">
                        By signing up, you agree to the 
                        <a class="no-underline border-b border-grey-dark text-grey-dark" href="#">
                            Terms of Service
                        </a> and 
                        <a class="no-underline border-b border-grey-dark text-indigo-600" href="#">
                            Privacy Policy
                        </a>
                    </div>
                </div>

                <div class="text-grey-dark mt-6">
                    Already have an account? 
                  <%= link_to 'Sign In', new_user_session_path, class: "py-4 px-2 text-indigo-700 font-semibold hover:text-indigo-400 transition duration-300"%>
                </div>
            </div>
        </div>
